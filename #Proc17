def RootsCount(A,B,C):
 D=B*B-4*A*C
 if D>0:
     print('уравнение с коэффициентами',A,' ',B,' ',C,' ','имеет 2 корня') 
 else:
     if D==0:  print('уравнение с коэффициентами',A,' ',B,' ',C,' ','имеет 1 корень') 
     else: 
      print ('уравнение с коэффициентами',A,' ',B,' ',C,' ','имеет 0 корней')
RootsCount(1,1,3)
RootsCount(4,4,1)
RootsCount(1,100,1)
